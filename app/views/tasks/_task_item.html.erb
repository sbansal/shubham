<div id="task_<%= task.id%>">
	<span><%= check_box_tag task.id, task.complete, task.complete, :class => 'task_check' %></span>
	<span><%= task.name %></span>
	<span class="small_links"><%= link_to 'Edit'.html_safe, edit_task_path(task) %> | </span>
	<span class="small_links"><%= link_to 'Delete', task, confirm: 'Are you sure?', method: :delete %></span>
</div>