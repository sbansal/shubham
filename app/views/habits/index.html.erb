<%= link_to 'Add New Habit', new_habit_path, :class => 'button big icon add' %>
<span class="status">Currently tracking <%= pluralize(@habits.count, 'Habit') %></span>
<div class="clear"></div>
<% @habits.each do |habit| %>
<div class="habit_container" id="habit_<%= habit.id %>">
	<%= render 'habit', :habit => habit %>
</div>
<% end %>


